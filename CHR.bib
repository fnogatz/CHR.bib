@inproceedings{bolock_equations_chr12,
	author = {Alia El Bolock and Amira Zaki and Thom Fr\"uhwirth},
	title = {Substitution-based {CHR} Solver for Bivariate Binomial Equation Sets},
	crossref = {pchr12},
	pages={41--50},
	abstract = {
	Various methods for solving non-linear algebraic systems
	exist, as this question is amongst the most popular in both the realm of
	mathematics and computation.
	As most of these methods use approximations, this work focuses on finding and
	directly solving a tractable subset. Bivariate binomial systems of non-linear polynomial equations were chosen and solved through
